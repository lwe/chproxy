#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

set +vx
echo ""
echo "WELCOME. You are totally ready to develop on chproxy, next things you can try:"
echo " - run the test suite: ./bin/rspec spec;"
echo " - check the cops:     ./bin/rubocop -D;"
echo " - or ... start coding."
